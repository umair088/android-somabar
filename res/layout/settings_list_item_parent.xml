<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pyntail.somabar"
    android:id="@+id/list_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="10dp" >
        
        <com.pyntail.somabar.ui.views.AnyTextView
        android:id="@+id/list_item_text_subscriptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:visibility="gone"
        android:text="Category Name Here "
        android:textSize="15sp"
        app:typeface="opensans_extralight.ttf" />

        <ImageView
            android:id="@+id/parentIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/filter_arrow_forward" />

        <com.pyntail.somabar.ui.views.AnyTextView
            android:id="@+id/list_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="Category Name Here "
            android:textSize="15sp"
            app:typeface="opensans_extralight.ttf" />

        <com.pyntail.somabar.ui.views.AnyTextView
            android:id="@+id/parentCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/list_item_text_view"
            android:paddingLeft="3dp"
            android:text="(30)"
            android:textColor="@color/orange"
            android:textSize="15sp"
            app:typeface="opensans_extralight.ttf" />
    </RelativeLayout>

</LinearLayout>